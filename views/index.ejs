<html ng-app="app.todos">

<head>
    <title>Node todo</title>
    <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.9.0/css/xeditable.min.css">

    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.7.5/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.9.0/js/xeditable.min.js"></script>
    <script src="assets/js/main/app.js"></script>
    <script src="assets/js/main/services/svTodo.js"></script>
</head>

<body ng-controller="todoController">
    <div class="container">
        <div class="jumbotron text-center">
            <h1>{{appName}} <span class="label label-info">{{todos.length}}</span></h1>
        </div>
        <div class="row" id="todo-list">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="checkbox" ng-repeat="todo in todos" >
                    <input type="checkbox" ng-model="todo.isDone" ng-change="updateTodo(todo)">
                    <a href ng-click="deleteTodo(todo)"><i class="fa fa-remove"></i></a>
                    <a href ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class="fa fa-edit"></i></a>
                    <span editable-text="todo.text" e-form="textBtnForm" ng-class="{strike:todo.isDone}" onaftersave="updateTodo(todo)"> {{todo.text }}</span>
                </div>
                <p class="text-center" ng-show="loading">
                    <span class="fa fa-spinner fa-spin fa-3x"></span>
                </p>
            </div>
        </div>

        <div class="row" id="todo-form">
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <form>
                    <div class="form-group">
                        <input ng-model="formData.text" type="text" class="form-control input-lg text-center"
                            placeholder="type somethink">
                    </div>
                    <button ng-click="createTodo()" type="submit" class="btn btn-primary btn-lg" ng-disabled="!formData.text">Add</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>